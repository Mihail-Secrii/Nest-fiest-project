<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>

    <link rel="stylesheet" href="/{{prefix}}/css/common/base.css">
    <link rel="stylesheet" href="/{{prefix}}/css/common/menu.css">
    <link rel="stylesheet" href="/{{prefix}}/css/slider.css">

    <title>Home</title>
</head>
<body>

<section class="container">
    {{>menu}}
</section>

<section class="container">
    <div class="slider">

        <div class="slider-blocks">
            <div class="slider-block" style="--bg: #0081C9">
                <p>1</p>
            </div>
            <div class="slider-block" style="--bg: #4E6C50">
                <p>2</p>
            </div>
            <div class="slider-block" style="--bg: #1F8A70">
                <p>3</p>
            </div>
            <div class="slider-block" style="--bg: #00337C">
                <p>4</p>
            </div>
            <div class="slider-block" style="--bg: #473C33">
                <p>5</p>
            </div>
        </div>

        <div class="slider-dots">
            <div data-slide="0" class="dot active"></div>
            <div data-slide="1" class="dot"></div>
            <div data-slide="2" class="dot"></div>
            <div data-slide="3" class="dot"></div>
            <div data-slide="4" class="dot"></div>
        </div>

        <div class="slider-btn slider-btn-left">
            <span class="material-symbols-outlined">
                chevron_left
            </span>
        </div>
        <div class="slider-btn slider-btn-right">
            <span class="material-symbols-outlined">
                chevron_right
            </span>
        </div>

    </div>
</section>

</body>
</html>

<script src="/{{prefix}}/js/common.js" defer></script>
<script src="/{{prefix}}/js/slider.js" defer></script>